---
import Layout from "@/layouts/Layout.astro";

interface Post {
  userId: number;
  id: number;
  title: string;
  body: string;
}

const posts: Post[] = await fetch(
  "https://jsonplaceholder.typicode.com/posts"
).then((r) => r.json());
---

<Layout title="Posts">
  <h1>Posts</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/posts/${post.id}`}>{post.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
